<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Fragment_Productos">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tituloProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:background="@color/blue_200"
                    android:text="Productos" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenProducto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/Producto1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Desayunos" />

                    <CheckBox
                        android:id="@+id/FavoritoProducto1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Favorito" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenProducto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/Producto2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Almuerzos" />

                    <CheckBox
                        android:id="@+id/FavoritoProducto2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Favorito" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenProducto3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/Producto3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Tortas" />

                    <CheckBox
                        android:id="@+id/FavoritoProducto3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Favorito" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenProducto4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/Producto4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Bebidas" />

                    <CheckBox
                        android:id="@+id/FavoritoProducto4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Favorito" />
                </TableRow>

            </TableLayout>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>